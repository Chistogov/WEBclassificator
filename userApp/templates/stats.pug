include application
currentPage = "/stats"
include navBar

.content
    .row
        div.col-md-12
            .card.card-block
                .card-body
                    table.table.table-striped
                        tbody
                            tr
                                td Размеченных снимков:
                                td=infoForm.rec_pics
                            tr
                                td Снимков в ожидании:
                                td=infoForm.wait_pics
                            tr
                                td Назначены пользователям:
                                td=infoForm.app_pics
                    div#accordion
                        .card
                            .card-header#ear-head
                                button.btn.btn-link.collapsed(data-toggle="collapse", data-target="#ear-list", aria-expanded="false", aria-controls="collapse-ear")="Снимки уха"
                            div#ear-list.collapse(aria-labelledby="ear-head" data-parent="#accordion")
                                div.card-body
                                    ul.list-group
                                        each item in pics_by_symp
                                            if(item[1]==True and item[5]==True)
                                                a(href='/pics/'~item[6]~'/0')
                                                    li.list-group-item.list-group-item-action
                                                        .row
                                                            .col-6
                                                                h6.text-left=item[0]
                                                            .col-6
                                                                h6.text-right=item[4]
                                        each item in pics_by_symp
                                            if(item[1] == True and item[5]==False)
                                                a(href='/pics/'~item[6]~'/0')
                                                    li.list-group-item.list-group-item-action
                                                        .row
                                                            .col-6
                                                                h6.text-left=item[0]
                                                            .col-6
                                                                h6.text-right=item[4]
                        .card
                            .card-header#throat-head
