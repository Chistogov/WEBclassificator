include application
include modals/info-modal

- var currentPage = "/login"

.enterblock
    div.card
        .card-body
            h5.card-title="Авторизация"
            form#loginform(method="post")
                if(error)
                    div.alert.alert-danger(role="alert")=error
                div.form-group
                    input#login.form-control(type="text", name="login", placeholder="Имя пользователя", required)
                div.form-group
                    input#loginpassword.form-control(type="password", name="loginpassword", placeholder="Пароль", required)
                button.btn.btn-primary(href="#" type="submit")="Вход"
        .card-footer
            button.btn.btn-secondary.btn-sm.modal-trigger(data-toggle="modal", data-target="#info-modal")="Регистрация"
